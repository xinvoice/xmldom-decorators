{
  "name": "@xinvoice/xmldom-decorators-cli",
  "version": "1.0.5",
  "description": "Command line tool to convert XSD to TypeScript classes using xmldom-decorators",
  "author": "andersnm (forked by xinvoice)",
  "license": "MIT",
  "homepage": "https://github.com/xinvoice/xmldom-decorators",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinvoice/xmldom-decorators.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "xmldom-decorators-cli": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@xinvoice/xmldom-decorators": "file:../xmldom-decorators"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ]
  },
  "blerf": {
    "steps": [
      {
        "outPath": "lib/**/*.js",
        "srcPath": [
          "src/**/*.ts",
          "tsconfig.json",
          "package.json"
        ],
        "script": "tsc"
      }
    ]
  }
}
